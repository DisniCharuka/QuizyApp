<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.disni.quizy.MainActivity">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_width="match_parent">

        <Button
            android:id="@+id/btnQuiz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz1"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="248dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp" />

        <Button
            android:id="@+id/btnQuiz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnQuiz1"
            android:layout_below="@+id/btnQuiz1"
            android:layout_marginTop="25dp"
            android:text="Quiz2" />

        <Button
            android:id="@+id/btnQuiz3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnQuiz2"
            android:layout_below="@+id/btnQuiz2"
            android:layout_marginTop="21dp"
            android:text="Quiz3" />

        <Button
            android:id="@+id/btnQuiz4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnQuiz3"
            android:layout_below="@+id/btnQuiz3"
            android:layout_marginTop="27dp"
            android:text="Quiz4" />

        <Button
            android:id="@+id/btnQuiz5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnQuiz4"
            android:layout_below="@+id/btnQuiz4"
            android:layout_marginTop="19dp"
            android:text="Quiz5" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
